pkgname='python-jinjanator-plugins'
_module='jinjanator-plugins'
_src_folder='jinjanator_plugins-25.1.0'
pkgver='25.1.0'
pkgrel=1
pkgdesc="Package which provides the plugin API for the jinjanator tool"
url="None"
depends=('python')
makedepends=('python-build' 'python-installer' 'python-wheel')
license=('unknown')
arch=('any')
source=("https://files.pythonhosted.org/packages/b5/7f/a20d7ff932118f69cf33f1303425281be897cb6fe0ffeeb4d27425669c72/jinjanator_plugins-25.1.0.tar.gz")
sha256sums=('46fdc53dc375bd6f460b2095f3073579a7a7a115487418156e9611ca5c8a96a8')

build() {
    cd "${srcdir}/${_src_folder}"
    python -m build --wheel --no-isolation
}

package() {

    cd "${srcdir}/${_src_folder}"
    python -m installer --destdir="${pkgdir}" dist/*.whl
}
